---
apiVersion: v1
kind: Service
metadata:
  name: registry
  namespace: docker-registry
spec:
{% if public_access %}
  type: NodePort
{% endif %}
  ports:
{% if enable_secure %}
    - port: 443
      targetPort: 443
  clusterIP: 10.106.195.1
{% else %}
    - port: 5000
      targetPort: 5000
{% endif %}
      protocol: TCP
{% if public_access %}
      nodePort: 31111
{% endif %}
  selector:
    app: registry